<Window x:Class="NvidiaCi.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="OnLoaded">

    <!-- Full Screen Semi-Transparent Background -->
    <Grid Background="#AA000000" MouseLeftButtonDown="Background_MouseLeftButtonDown">
        
        <!-- Sidebar Container (Right Side) -->
        <Border HorizontalAlignment="Right" Width="420" Background="{StaticResource BackgroundColor}" 
                BorderBrush="{StaticResource AccentColor}" BorderThickness="2,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" /> <!-- Navbar column -->
                    <ColumnDefinition Width="*" />  <!-- Content column -->
                </Grid.ColumnDefinitions>

                <!-- Navigation Sidebar (Left) -->
                <Border Grid.Column="0" Background="#111111" BorderBrush="#222222" BorderThickness="0,0,1,0">
                    <StackPanel Margin="0,60,0,0">
                        <RadioButton x:Name="DashboardTab" Style="{StaticResource NavButtonStyle}" IsChecked="True" Content="ðŸŽ®" Tag="Dashboard" Click="Tab_Click" />
                        <RadioButton x:Name="GalleryTab" Style="{StaticResource NavButtonStyle}" Content="ðŸ–¼ï¸" Tag="Gallery" Click="Tab_Click" />
                        <RadioButton x:Name="SettingsTab" Style="{StaticResource NavButtonStyle}" Content="âš™ï¸" Tag="Settings" Click="Tab_Click" />
                    </StackPanel>
                </Border>

                <!-- Content Area -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="25,35,25,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="NVIDIA" Foreground="{StaticResource AccentColor}" FontSize="20" FontWeight="Black" VerticalAlignment="Center"/>
                            <TextBlock x:Name="HeaderText" Text=" LITE" Foreground="{StaticResource TextColor}" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button VerticalAlignment="Center" HorizontalAlignment="Right" 
                                Width="32" Height="32" Foreground="#88FFFFFF" Background="Transparent" BorderThickness="0" 
                                Click="CloseButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#22FFFFFF"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="&#x2715;" FontSize="16"/>
                        </Button>
                    </Grid>
                    
                    <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="#22FFFFFF" Margin="25,0" Height="1"/>

                    <!-- Content Views -->
                    <Grid Grid.Row="1">
                        <!-- Dashboard View -->
                        <Grid x:Name="DashboardView" Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <ListBox Grid.Row="0" x:Name="GameListBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Margin="15"
                                     Padding="0,0,5,0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     SelectionChanged="GameListBox_SelectionChanged"
                                     ItemContainerStyle="{StaticResource GameItemStyle}"
                                     ItemTemplate="{StaticResource GameItemTemplate}">
                                <ListBox.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Width" Value="6"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </ListBox.Resources>
                            </ListBox>

                            <Border Grid.Row="1" Background="#0A000000" Padding="25">
                                <Button Content="SCAN FOR GAMES" 
                                        x:Name="ScanButton" 
                                        Click="ScanButton_Click"
                                        Height="50" FontSize="13" FontWeight="Bold" Cursor="Hand"
                                        Background="{StaticResource AccentColor}" Foreground="Black" BorderThickness="0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6" />
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Border>
                        </Grid>

                        <!-- Gallery View -->
                        <Grid x:Name="GalleryView" Visibility="Collapsed" Margin="25">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="SCREENSHOTS" Foreground="{StaticResource TextColor}" FontSize="12" FontWeight="Bold" Margin="0,0,0,20" Opacity="0.6"/>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="GalleryItemsControl">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="5" Width="145" Height="85" CornerRadius="6" Background="#222222" BorderBrush="#333333" BorderThickness="1" ClipToBounds="True">
                                                <Image Source="{Binding}" Stretch="UniformToFill" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <TextBlock Grid.Row="1" Text="No screenshots found." x:Name="NoGalleryText" Visibility="Visible" Foreground="#555555" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- Settings View -->
                        <Grid x:Name="SettingsView" Visibility="Collapsed" Margin="30">
                            <StackPanel>
                                <TextBlock Text="SETTINGS" Foreground="{StaticResource TextColor}" FontSize="12" FontWeight="Bold" Margin="0,0,0,25" Opacity="0.6"/>
                                
                                <TextBlock Text="Global Hotkey" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,8"/>
                                <Border Background="#1AFFFFFF" Padding="12" CornerRadius="6" Margin="0,0,0,25" BorderBrush="#22FFFFFF" BorderThickness="1">
                                    <Grid>
                                        <TextBlock Text="Alt + Z" Foreground="White" FontWeight="SemiBold"/>
                                        <TextBlock Text="Default" HorizontalAlignment="Right" Foreground="#888888" FontSize="11"/>
                                    </Grid>
                                </Border>

                                <CheckBox Content="Enable Screenshot Gallery" Foreground="White" IsChecked="True" Margin="0,0,0,20" FontSize="13"/>
                                
                                <TextBlock Text="Screenshot Hotkey" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,8"/>
                                <Border Background="#1AFFFFFF" Padding="12" CornerRadius="6" BorderBrush="#22FFFFFF" BorderThickness="1">
                                    <Grid>
                                        <TextBlock Text="Win + Shift + S" Foreground="White" FontWeight="SemiBold"/>
                                        <TextBlock Text="System" HorizontalAlignment="Right" Foreground="#888888" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
