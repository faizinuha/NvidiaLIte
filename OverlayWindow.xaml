<Window x:Class="myapp.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="OnLoaded">

    <Border CornerRadius="10" Background="#DD222222" BorderBrush="#FF444444" BorderThickness="1" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Game Hub" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,10"/>
            
            <Button Grid.Row="0" Content="&#x2715;" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" 
                    Width="30" Height="30" Foreground="White" Background="#55FF0000" BorderThickness="0" 
                    Click="CloseButton_Click" />
            
            <ListBox Grid.Row="1" x:Name="GameListBox"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionChanged="GameListBox_SelectionChanged"
                     ItemContainerStyle="{StaticResource GameItemStyle}"
                     ItemTemplate="{StaticResource GameItemTemplate}"/>
            
            <Button Grid.Row="2" Content="SCAN GAMES" 
                    x:Name="ScanButton" 
                    Click="ScanButton_Click"
                    Margin="10" Padding="10,5" Background="#FF007ACC" Foreground="White" BorderThickness="0"/>
        </Grid>
    </Border>
</Window>
