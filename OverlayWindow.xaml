<Window x:Class="MyWpfApp.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Topmost="True" 
        ShowInTaskbar="False"
        Background="#7F000000">
    <Grid>
        <TextBlock Text="Hello from the overlay!" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Close" Click="CloseButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Window>
