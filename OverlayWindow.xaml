<Window x:Class="NvidiaCi.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="OnLoaded"
        KeyDown="OnWindowKeyDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- macOS-style Paper Slide Animation -->
        <Storyboard x:Key="ShowSidebar">
            <DoubleAnimation Storyboard.TargetName="SidebarBorder" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-650" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/> 
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainRootGrid" 
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <Storyboard x:Key="HideSidebar">
            <DoubleAnimation Storyboard.TargetName="SidebarBorder" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             To="-650" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainRootGrid" 
                             Storyboard.TargetProperty="Opacity"
                             To="0" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="FadeInContent">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource ShowSidebar}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Root Grid -->
    <Grid x:Name="MainRootGrid">
        <!-- Full Screen Semi-Transparent Background (Glass effect like Game Bar) -->
        <Grid Background="#22000000" MouseLeftButtonDown="Background_MouseLeftButtonDown" />

        <!-- Notification/Flash Effect for Screenshots -->
        <Border x:Name="FlashBorder" Background="White" Visibility="Collapsed" IsHitTestVisible="False" Opacity="0.5"/>
        
        <!-- Sidebar Container (Left Side) -->
        <Border x:Name="SidebarBorder" HorizontalAlignment="Left" Width="650" Background="{StaticResource BackgroundColor}" 
                BorderBrush="{StaticResource AccentColor}" BorderThickness="0,0,2,0">
            <Border.RenderTransform>
                <TranslateTransform X="-650"/>
            </Border.RenderTransform>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75" /> <!-- Navbar column -->
                    <ColumnDefinition Width="*" />  <!-- Content column -->
                </Grid.ColumnDefinitions>

                <!-- Navigation Sidebar (Leftmost) -->
                <Border Grid.Column="0" Background="#0D0D0D" BorderBrush="#222222" BorderThickness="0,0,1,0">
                    <StackPanel Margin="0,80,0,0">
                        <RadioButton x:Name="DashboardTab" Style="{StaticResource NavButtonStyle}" IsChecked="True" Content="ðŸŽ®" Tag="Dashboard" Click="Tab_Click" />
                        <RadioButton x:Name="GalleryTab" Style="{StaticResource NavButtonStyle}" Content="ðŸ–¼ï¸" Tag="Gallery" Click="Tab_Click" />
                        <RadioButton x:Name="SettingsTab" Style="{StaticResource NavButtonStyle}" Content="âš™ï¸" Tag="Settings" Click="Tab_Click" />
                    </StackPanel>
                </Border>

                <!-- Content Area -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="30,45,25,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="NVIDIA" Foreground="{StaticResource AccentColor}" FontSize="22" FontWeight="Black" VerticalAlignment="Center"/>
                            <TextBlock x:Name="HeaderText" Text=" LITE" Foreground="{StaticResource TextColor}" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button VerticalAlignment="Center" HorizontalAlignment="Right" 
                                Width="35" Height="35" Foreground="#66FFFFFF" Background="Transparent" BorderThickness="0" 
                                Click="CloseButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1AFFFFFF"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="&#x2715;" FontSize="18"/>
                        </Button>
                    </Grid>
                    
                    <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="#1AFFFFFF" Margin="30,0,25,0" Height="1"/>

                    <!-- Content Views -->
                    <Grid Grid.Row="1" x:Name="ContentView">
                        <Grid.Resources>
                            <Style TargetType="Grid">
                                <Setter Property="Opacity" Value="1"/>
                            </Style>
                        </Grid.Resources>
                        <!-- Dashboard View -->
                        <Grid x:Name="DashboardView" Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Search Bar -->
                                <Border Grid.Row="0" Margin="10,0,15,20" Background="#1AFFFFFF" CornerRadius="4" BorderBrush="#33FFFFFF" BorderThickness="1">
                                    <Grid>
                                        <TextBlock Text="ðŸ” Filter games..." Foreground="#66FFFFFF" Margin="10,0" VerticalAlignment="Center" IsHitTestVisible="False" 
                                                   Visibility="{Binding Text.IsEmpty, ElementName=SearchBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBox x:Name="SearchBox" Background="Transparent" BorderThickness="0" Foreground="White" 
                                                 Padding="10,8" VerticalContentAlignment="Center" CaretBrush="{StaticResource AccentColor}"
                                                 TextChanged="SearchBox_TextChanged"/>
                                    </Grid>
                                </Border>

                                <ListBox Grid.Row="1" x:Name="GameListBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="0,0,5,0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         SelectionChanged="GameListBox_SelectionChanged"
                                         ItemContainerStyle="{StaticResource GameItemStyle}"
                                         ItemTemplate="{StaticResource GameItemTemplate}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.Resources>
                                        <Style TargetType="ScrollBar">
                                            <Setter Property="Width" Value="5"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </ListBox.Resources>
                                </ListBox>

                                <StackPanel Grid.Row="1" x:Name="NoGamesFoundText" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                                    <TextBlock Text="ðŸŽ®" FontSize="48" Foreground="#222222" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="NO GAMES FOUND" Foreground="#444444" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Border Grid.Row="1" Background="#05FFFFFF" Padding="30">
                                <Button Content="RE-SCAN GAMES" 
                                        x:Name="ScanButton" 
                                        Click="ScanButton_Click"
                                        Height="55" FontSize="14" FontWeight="Bold" Cursor="Hand"
                                        Background="{StaticResource AccentColor}" Foreground="Black" BorderThickness="0">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4" />
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Border>
                        </Grid>

                        <!-- Gallery View -->
                        <Grid x:Name="GalleryView" Visibility="Collapsed" Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="SCREENSHOTS" Foreground="{StaticResource TextColor}" FontSize="12" FontWeight="Bold" Margin="0,0,0,25" Opacity="0.5"/>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="GalleryItemsControl">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,10,10" Width="170" Height="100" CornerRadius="8" Background="#111111" BorderBrush="#222222" BorderThickness="1" ClipToBounds="True" Cursor="Hand">
                                                <Border.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="Open Image" Click="OpenImage_Click" 
                                                                  Tag="{Binding Path, RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.DataContext.Path}"/>
                                                        <MenuItem Header="Copy to Clipboard" Click="CopyImage_Click"
                                                                  Tag="{Binding Path, RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.DataContext.Path}"/>
                                                        <MenuItem Header="Save As..." Click="SaveImageAs_Click"
                                                                  Tag="{Binding Path, RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.DataContext.Path}"/>
                                                        <Separator/>
                                                        <MenuItem Header="Delete" Click="DeleteImage_Click"
                                                                  Tag="{Binding Path, RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.DataContext.Path}"/>
                                                    </ContextMenu>
                                                </Border.ContextMenu>
                                                <Image Source="{Binding Source}" Stretch="UniformToFill" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <TextBlock Grid.Row="1" Text="No screenshots found." x:Name="NoGalleryText" Visibility="Visible" Foreground="#444444" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- Settings View -->
                        <Grid x:Name="SettingsView" Visibility="Collapsed" Margin="30">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="SETTINGS" Foreground="{StaticResource TextColor}" FontSize="12" FontWeight="Bold" Margin="0,0,0,25" Opacity="0.5"/>
                                    
                                    <!-- SYSTEM CONTROL -->
                                    <TextBlock Text="SYSTEM" Foreground="#FFAAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>
                                    


                                    <!-- Brightness -->
                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="40" Height="40" Background="#1DFFFFFF" CornerRadius="20" HorizontalAlignment="Left">
                                            <TextBlock Text="â˜€ï¸" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Screen Brightness" Foreground="White" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <Slider x:Name="BrightnessSlider" Minimum="0" Maximum="100" Value="100" 
                                                    ValueChanged="BrightnessSlider_ValueChanged"
                                                    Style="{StaticResource NvidiaSliderStyle}"
                                                    Width="250" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Volume -->
                                    <Grid Margin="0,0,0,30">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="40" Height="40" Background="#1DFFFFFF" CornerRadius="20" HorizontalAlignment="Left">
                                            <TextBlock Text="ðŸ”Š" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="System Volume" Foreground="White" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <Slider x:Name="VolumeSlider" Minimum="0" Maximum="100" Value="50" 
                                                    ValueChanged="VolumeSlider_ValueChanged"
                                                    Style="{StaticResource NvidiaSliderStyle}"
                                                    Width="250" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- WiFi -->
                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="40" Height="40" Background="#1DFFFFFF" CornerRadius="20" HorizontalAlignment="Left">
                                            <TextBlock Text="ðŸ“¡" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Wi-Fi Connection" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                            <ComboBox x:Name="WifiComboBox" SelectionChanged="WifiComboBox_SelectionChanged"
                                                      Background="#111" BorderThickness="1" BorderBrush="#333" Foreground="#CCCCCC"
                                                      Margin="0,5,0,0" FontSize="11" Width="200" HorizontalAlignment="Left"/>
                                            <PasswordBox x:Name="WifiPasswordBox" Visibility="Collapsed" 
                                                         Background="#111" BorderBrush="#333" Foreground="White"
                                                         Width="200" Height="25" Margin="0,5,0,0" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                                            <Button x:Name="WifiConnectBtn" Content="CONNECT" Click="ConnectWifi_Click"
                                                    Visibility="Collapsed" Background="{StaticResource AccentColor}" Foreground="Black" 
                                                    FontSize="10" FontWeight="Bold" Padding="10,5" BorderThickness="0" Cursor="Hand" Margin="0,0,0,5">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="4"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                            <Button Content="MANAGE" Click="ManageWifi_Click"
                                                    Background="#1AFFFFFF" Foreground="White" FontSize="10" FontWeight="Bold"
                                                    Padding="10,5" BorderThickness="0" Cursor="Hand">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="4"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <Separator Background="#1AFFFFFF" Height="1" Margin="0,0,0,25"/>

                                    <!-- HOTKEYS -->
                                    <TextBlock Text="SHORTCUTS" Foreground="#FFAAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>

                                    <TextBlock Text="Overlay Global Hotkey" Foreground="#888888" FontSize="12" Margin="0,0,0,10"/>
                                    <Grid Margin="0,0,0,20">
                                        <Border Background="#0DFFFFFF" Padding="15" CornerRadius="4" BorderBrush="#1AFFFFFF" BorderThickness="1">
                                            <TextBlock x:Name="OverlayHotkeyText" Text="Alt + Z" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                        </Border>
                                        <Button x:Name="ChangeOverlayBtn" Content="CHANGE" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
                                                Background="Transparent" Foreground="{StaticResource AccentColor}" BorderThickness="0" FontWeight="Bold" FontSize="11"
                                                Click="ChangeOverlayHotkey_Click" Cursor="Hand"/>
                                    </Grid>
                                    
                                    <TextBlock Text="Screenshot Hotkey" Foreground="#888888" FontSize="12" Margin="0,0,0,10"/>
                                    <Grid Margin="0,0,0,30">
                                        <Border Background="#0DFFFFFF" Padding="15" CornerRadius="4" BorderBrush="#1AFFFFFF" BorderThickness="1">
                                            <TextBlock x:Name="ScreenshotHotkeyText" Text="F10" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                        </Border>
                                        <Button x:Name="ChangeScreenshotBtn" Content="CHANGE" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
                                                Background="Transparent" Foreground="{StaticResource AccentColor}" BorderThickness="0" FontWeight="Bold" FontSize="11"
                                                Click="ChangeScreenshotHotkey_Click" Cursor="Hand"/>
                                    </Grid>

                                    <TextBlock Text="Screenshots are saved to: Pictures/Screenshots" Foreground="#555555" FontSize="10" Margin="5,0,0,0"/>
                                    <CheckBox Content="Auto-save Screen Captures" Foreground="White" IsChecked="True" Margin="0,15,0,0" FontSize="13"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
